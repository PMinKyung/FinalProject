<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_alignEnd="@+id/bt_list"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="save"
        android:id="@+id/bt_save"
        android:layout_alignTop="@+id/bt_list"
        android:layout_toStartOf="@+id/bt_list" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="View List"
        android:id="@+id/bt_list"
        android:layout_marginBottom="76dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:id="@+id/et_text"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/bt_save"
        android:layout_alignEnd="@+id/bt_list" />

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Study"
        android:id="@+id/cb_study"
        android:layout_alignBaseline="@+id/bt_list"
        android:layout_alignBottom="@+id/bt_list"
        android:layout_alignParentStart="true" />

</RelativeLayout>
